{
  "name": "@kurocado-studio/qa",
  "version": "0.0.0-semantically-released",
  "description": "",
  "homepage": "https://github.com/kurocado-studio/qa",
  "bugs": {
    "url": "https://github.com/kurocado-studio/qa/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kurocado-studio/qa.git"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsup --dts  && copyfiles -u 1 src/**/tsconfig.*.json dist",
    "commitlint": "pnpm exec commitlint --edit .git/COMMIT_EDITMSG",
    "eslint": "eslint --max-warnings=0 .",
    "eslint-check": "eslint --max-warnings=0 .",
    "eslint-fix": "eslint --max-warnings=0 . --fix",
    "lint": "eslint --max-warnings=0 .",
    "prepare": "husky install",
    "prettier-check": "prettier --check . ",
    "prettier-fix": "prettier --check . --write",
    "semantic-release": "semantic-release",
    "test": "vitest run",
    "typecheck": "tsc"
  },
  "lint-staged": {
    "*": [
      "pnpm run prettier-fix"
    ],
    "**/*.{ts,tsx}": [
      "pnpm run eslint-fix",
      "pnpm run lint"
    ]
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.cts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@eslint/js": "^9.19.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jest-axe": "^3.5.9",
    "@types/lodash-es": "^4.17.12",
    "@types/mdx": "^2.0.13",
    "@types/node": "20.5.0",
    "@types/supertest": "^6.0.2",
    "c8": "^10.1.3",
    "dotenv": "^16.4.7",
    "fast-text-encoding": "^1.0.6",
    "globals": "^15.14.0",
    "jsdom": "^25.0.1",
    "lodash-es": "^4.17.21",
    "typescript": "^5.7.3",
    "util": "^0.12.5",
    "vite-plugin-checker": "^0.8.0",
    "vite-plugin-dts": "^4.5.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8",
    "vitest-axe": "^0.1.0"
  },
  "peerDependencies": {
    "vitest-axe": "^0.1.0"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@kurocado-studio/styleguide": "1.10.3",
    "@types/react": "19.0.8",
    "commitlint": "19.6.0",
    "copyfiles": "2.4.1",
    "eslint": "9.16.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "react": "18.2.0",
    "semantic-release": "^23.1.1",
    "tsup": "^8.3.6"
  },
  "overrides": {
    "conventional-changelog-conventionalcommits": ">= 8.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./remix/tsconfig.qa": "./dist/remix/tsconfig.qa.json"
  }
}

{
  "extends": ["@kurocado-studio/styleguide/tsconfig/node"],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "rootDir": ".",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "exclude": ["prettier.config.js", "node_modules", "dist", "eslint.config.js"]
}
